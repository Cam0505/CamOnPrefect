{
  "name": "CamOnPrefect",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "camonprefect-app:latest",
    "context": ".."
  },
  "runArgs": [
    "--cpus=4",
    "--memory=4g",
    "--init"
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/duckdb,target=/workspaces/CamOnPrefect/duckdb,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "dbt.profilesDir": "${containerWorkspaceFolder}/dbt",
        "python.linting.enabled": true,
        "python.envFile": "${containerWorkspaceFolder}/.env"
      },
      "extensions": ["ms-python.python", "dbt-labs.dbt"]
    }
  },
  "postCreateCommand": "bash .devcontainer/init_prefect.sh",
  "forwardPorts": [4200],
  "containerEnv": {
    "PREFECT_API_URL": "http://127.0.0.1:4200/api",
    "PYTHONPATH": "/workspaces/CamOnPrefect"
  }
}